<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:color="@color/light_ui" android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="#007AFF" />
            <corners android:radius="6dp" />
            <padding android:bottom="12dp" android:left="12dp" android:right="12dp" android:top="12dp" />
        </shape>
    </item>

    <item android:color="@color/light2" android:state_checked="false">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" />
            <corners android:radius="6dp" />
            <padding android:bottom="12dp" android:left="12dp" android:right="12dp" android:top="12dp" />
        </shape>
    </item>
</selector>